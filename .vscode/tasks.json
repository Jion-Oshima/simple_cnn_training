    "version": "2.0.0",
    "tasks": [
        {
            "label": "run main.py",
            "type": "shell",
            "command": "python",
            "args": [
                "main.py",
                "-w",
                "24",
                "-b",
                "8",
                "-e",
                "5"
            ]
        },
        {
            "label": "run main.py, bs=256, 2GPUs, Adam, ImageFolder",
            "type": "shell",
            "options": {
                "env": {
                    "CUDA_VISIBLE_DEVICES": "2,3"
                },
            },
            "command": "python",
            "args": [
                "main.py",
                "-d",
                "ImageFolder",
                "-r",
                "/mnt/NAS-TVS872XT/dataset-lab/Tiny-ImageNet/",
                "-w",
                "64",
                "-b",
                "256",
                "-e",
                "5",
                "--optimizer",
                "Adam",
            ]
        },
        {
            "label": "pl bs=64, GPU=0,1 dp",
            "type": "shell",
            "options": {
                "env": {
                    "CUDA_VISIBLE_DEVICES": "0,1"
                },
            },
            "command": "python",
            "args": [
                "main_pl.py",
                "-w",
                "24",
                "-b",
                "64",
                "-e",
                "5",
                "--val_interval_epochs",
                "1",
                // "--use_dp",
                // "--single_gpu",
                "--gpu_strategy",
                "dp",
            ]
        },
        {
            "label": "pl bs=64, GPU=0,1,2 ddp",
            "type": "shell",
            "options": {
                "env": {
                    "CUDA_VISIBLE_DEVICES": "0,1,2"
                },
            },
            "command": "python",
            "args": [
                "main_pl.py",
                "-w",
                "24",
                "-b",
                "64",
                "-e",
                "5",
                "--val_interval_epochs",
                "1",
                "--gpu_strategy",
                "ddp",
            ]
        },
    ]
}
